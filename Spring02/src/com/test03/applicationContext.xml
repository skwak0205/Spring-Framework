<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="lee" class="com.test03.Address">
		<!-- 생성자가 없는 경우 -->
		<!-- property는 setter를 찾아 값을 주입 -->
		<property name="name" value="이순신" /> <!-- setName을 호출 -->
		<property name="addr" value="서울시 강남구" />
		<property name="phone" value="010-1111-1111" />
	</bean>
	
	<bean id="hong" class="com.test03.Address">
		<property name="name" value="홍길동" />
		<property name="addr" value="경기도 수원시" />
		<property name="phone" value="010-2222-2222" />
	</bean>
</beans>
